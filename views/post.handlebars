<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{text}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  <button type="submit" class="btn btn-primary">Comment</button>
 {{#if comment_clicked}}
        <a href="/profile">profile</a> |
        <button class="no-button" id="logout">logout</button>

<div class="row mt-4">
  <div class="col-md-6">
    <h4>New Commentt:</h4>

    <form class="form new-comment-form">
     
      <div class="form-group">
        <label for="comment-desc">Text:</label>
        <textarea class="form-input" id="comemnt-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>




{{#each comments as |comment| }}
<div class="row mb-2 comment">
  <div class="col-md-2">
    <h2>
   
      <a href="/comment/{{comment.id}}">{{comment.name}}</a>
    </h2>
   
    <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{comment.text}}
    </p>
  </div>
</div>
{{/each}}


 <script src="./js/comment.js"></script>
</div>
