<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Post</h3>

    <form class="form new-post-form">
 <div class="form-group">
        <label class="label" for="post-state">Post Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" value="{{name}}" />
      </div>
<div class="form-group">
        <label class="label" for="post-desc">Text:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"> {{text}} </textarea>
</div>


      <div class="form-group">
        <button type="submit" class="btn btn-primar update">Update</button>
        <a href="/profile">
       Cancel
         </a>
      </div>
    </form>
  </div>

  <script src= "/js/postUpdateLogic.js"></script>